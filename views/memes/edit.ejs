<% include ../partials/header %>

<h1 class="LSE" style="text-align: center">Edit your meme</h1>

<div class="container">
    <div class="row">
        <div style="width: 30%; margin: 25px auto;">
            <form action="/memes/<%= memes._id %>/?_method=PUT" method="POST">
                <div class="form-group">
                    <input class="form-control" type="text" name="memes[description]" value="<%=memes.description %>">
                </div>
                <div class="form-group">
                    <input class="form-control" type="text" name="memes[image]" value="<%=memes.image %>">
                </div>
                <div class="form-group">
                    <button class="btn btn-lg btn-primary btn-block">Submit!</button>
                </div>
    
         
         
         
    
            </form>
            <a href="/memes">Go Back</a>
        </div>


        
    </div>
</div>
